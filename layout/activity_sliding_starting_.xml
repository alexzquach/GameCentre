<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fall2018.csc2017.GameCentre.SlidingTiles.SlidingTilesStartingActivity">

    <TextView
        android:id="@+id/GameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Welcome To Sliding Tiles \n A Puzzle Game where you must arrange the numbers in the correct order"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp" />

    <Button
        android:id="@+id/StartButton"
        android:layout_width="165dp"
        android:layout_height="62dp"
        android:layout_below="@+id/GameText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="477dp"
        android:layout_marginEnd="31dp"
        android:text="New Game"
        android:textSize="24sp" />

    <Button
        android:id="@+id/LoadButton"
        android:layout_width="168dp"
        android:layout_height="61dp"
        android:layout_below="@+id/GameText"
        android:layout_marginTop="477dp"
        android:layout_marginEnd="22dp"
        android:layout_toStartOf="@+id/StartButton"
        android:text="Load Game"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="293dp"
        android:layout_height="435dp"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/slidingtiles_gameplay" />

</RelativeLayout>