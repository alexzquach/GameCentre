<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bbada0"
    tools:context="fall2018.csc2017.GameCentre.PowersPlus.PowersPlusGameActivity">

    <ImageButton
        android:id="@+id/imgScoreboard2"
        android:layout_width="76dp"
        android:layout_height="49dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="4dp"
        android:adjustViewBounds="true"
        android:background="#eee4da"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/trophy_512"
        tools:scaleType="fitCenter" />

    <GridView
        android:id="@+id/gridPowersPlus"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="164dp"
        android:background="#bbada0"
        android:numColumns="4" />

    <Button
        android:id="@+id/buttonUndo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#eee4da"
        android:text="Undo" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="92dp"
        android:layout_marginTop="15dp"
        android:text="Current Score:"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtScore"
        android:layout_width="49dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="151dp"
        android:layout_marginBottom="-1dp"
        android:text="0"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtGoal"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="66dp"
        android:text="Swipe to get the Xth power of Y!"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtHighest"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="114dp"
        android:layout_marginEnd="-123dp"
        android:layout_toStartOf="@+id/txtScore"
        android:text="Current Highest Power: XX"
        android:textAlignment="center"
        android:textSize="18sp" />

</RelativeLayout>